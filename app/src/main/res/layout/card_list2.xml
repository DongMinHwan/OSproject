<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listtouch"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="91dp">


            <ImageView
                android:id="@+id/listImage_01"
                android:layout_width="68dp"
                android:layout_height="77dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.045"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/cardTitle_01"
                android:layout_width="302dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/listImage_01"
                app:layout_constraintTop_toTopOf="@+id/listImage_01"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/categoryDesc_01"
                android:layout_width="302dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/listImage_01"
                app:layout_constraintEnd_toEndOf="@+id/cardTitle_01"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/listImage_01"
                app:layout_constraintTop_toBottomOf="@+id/category_01"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/category_01"
                android:layout_width="172dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/cardTitle_01"
                app:layout_constraintHorizontal_bias="0.109"
                app:layout_constraintStart_toEndOf="@+id/listImage_01"
                app:layout_constraintTop_toBottomOf="@+id/cardTitle_01" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/listImage_02"
                android:layout_width="87dp"
                android:layout_height="83dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.028"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/cardTitle_02"
                android:layout_width="275dp"
                android:layout_height="23dp"
                app:layout_constraintBottom_toBottomOf="@+id/listImage_02"
                app:layout_constraintEnd_toStartOf="@+id/listImage_02"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/listImage_02"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/category_02"
                android:layout_width="272dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/listImage_02"
                app:layout_constraintEnd_toStartOf="@+id/listImage_02"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/listImage_02"
                app:layout_constraintVertical_bias="0.457" />

            <TextView
                android:id="@+id/categoryDesc_02"
                android:layout_width="274dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/listImage_02"
                app:layout_constraintEnd_toStartOf="@+id/listImage_02"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/listImage_02"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>